{
  "name": "clean-launcher",
  "version": "0.1.0",
  "description": "Cross-platform Electron Minecraft launcher with Microsoft authentication",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": "CleanLauncher Contributors",
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18"
  },
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "package": "electron-builder -mwl",
    "package:win": "electron-builder --win nsis",
    "preview": "electron-vite preview",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "20.10.6",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.16",
    "electron": "28.1.3",
    "electron-builder": "24.9.1",
    "electron-vite": "2.0.0",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.33.2",
    "postcss": "8.4.31",
    "tailwindcss": "3.3.5",
    "typescript": "5.2.2",
    "vite": "4.4.11",
    "vitest": "0.34.6"
  },
  "dependencies": {
    "@electron/remote": "2.1.2",
    "@floating-ui/react": "0.26.9",
    "@radix-ui/react-switch": "1.0.3",
    "@tanstack/react-query": "4.36.1",
    "clsx": "2.0.0",
    "dotenv": "16.3.1",
    "adm-zip": "0.5.10",
    "fs-extra": "11.1.1",
    "keytar": "7.9.0",
    "ky": "1.0.0",
    "node-fetch": "3.3.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.18.0",
    "zustand": "4.4.4",
    "zod": "3.22.4"
  },
  "repository": {
    "type": "git",
    "url": "https://example.com/CleanLauncher.git"
  },
  "build": {
    "appId": "com.cleanlauncher.app",
    "productName": "CleanLauncher",
    "directories": {
      "buildResources": "build"
    },
    "files": ["dist/**"],
    "mac": {
      "category": "public.app-category.games"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Game"
    },
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-Setup-${version}.exe"
    }
  }
}
